<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/desgin"
    tools:context="ap.example.annirbas.staxi.Reparation">

    <LinearLayout
        android:layout_width="335dp"
        android:layout_height="358dp"
        android:layout_marginLeft="50dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editText7"
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:ems="10"
            android:hint="Nom de réparation"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="30dp" />




        <EditText
            android:id="@+id/editText10"
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Date de réparation"
            android:inputType="date"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="250dp" />


        <EditText
            android:id="@+id/editText11"
            android:layout_width="269dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Prix de réparation"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="325dp" />

        <EditText
            android:id="@+id/editText12"
            android:layout_width="269dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="nombre de réparation effectuée"
            android:inputType="number"
            tools:layout_editor_absoluteX="241dp"
            tools:layout_editor_absoluteY="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/desgin"
            android:text="Envoyer"
            android:textColor="@color/colorPrimaryDark"
            tools:layout_editor_absoluteX="92dp"
            tools:layout_editor_absoluteY="446dp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/desgin"
            android:text="Annuler"
            android:textColor="@color/colorPrimaryDark" />
    </LinearLayout>
</LinearLayout>
