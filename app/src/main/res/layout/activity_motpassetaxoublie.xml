<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/desgin"
    tools:context="ap.example.annirbas.staxi.Motpassetaxoublie">

    <TextView
        android:id="@+id/ed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="Récupérer votre mot de passe ici"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textColorLink="@color/colorAccent"
        android:textSize="23sp"
        android:textStyle="bold|italic" />
    <LinearLayout
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/nmutilcl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:orientation="vertical">
            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autofillHints="Votre numero"
                android:hint="Votre numero"
                android:layout_marginLeft="50dp">

                <EditText
                    android:id="@+id/num"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:background="@android:color/background_light"
                    android:drawableLeft="@drawable/ic_user_5"
                    android:imeActionId="6"
                    android:imeActionLabel="@string/action_sign_in"
                    android:imeOptions="actionUnspecified"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autofillHints="nouveau mot de passe "
                android:hint="nouveau mot de passe"
                android:layout_marginLeft="50dp">


                <EditText
                    android:id="@+id/nmdp"

                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="0dp"
                    android:background="@android:color/background_light"
                    android:drawableLeft="@drawable/mot"
                    android:inputType="text|textPassword"
                    android:maxLines="1"
                    android:singleLine="true" />


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autofillHints="verifier nouveau mot de passe"
                android:hint="verifier nouveau mot de passe"
                android:layout_marginLeft="50dp">

                <EditText
                    android:id="@+id/vmdp"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:background="@android:color/background_light"
                    android:drawableLeft="@drawable/mot"
                    android:imeActionId="6"
                    android:imeActionLabel="@string/action_sign_in"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:singleLine="true" />
            </android.support.design.widget.TextInputLayout>


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:id="@+id/cardView1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:onClick="envoyee"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="400dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp">


            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:gravity="center"

                android:text="Envoyer  "

                android:textColor="@color/cardview_light_background"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

        </android.support.v7.widget.CardView>


    </LinearLayout>


</RelativeLayout>