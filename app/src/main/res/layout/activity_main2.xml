<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/talya"
    tools:context="ap.example.annirbas.staxi.Main2Activity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp"
        android:layout_marginTop="450dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp">


        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:drawableLeft="@drawable/ic_tax"
            android:gravity="center"

            android:text="Devenir un chauffeur  "
            android:textColor="@color/cardview_light_background"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"

        android:layout_alignLeft="@+id/cardView1"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/cardView1"
        android:layout_marginBottom="31dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp">


        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="58dp"
            android:drawableLeft="@drawable/ic_cl"
            android:gravity="center"
            android:text="Prenez un taxi "
            android:textColor="@color/cardview_light_background"
            android:textSize="18sp"
            android:textStyle="bold|italic" />


    </android.support.v7.widget.CardView>


</RelativeLayout>

