<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/desgin"
    tools:context="ap.example.annirbas.staxi.Observationcl">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="229dp"
        android:layout_height="60dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/allan"
        android:gravity="center_vertical|center_horizontal|fill_horizontal|center|fill|clip_vertical|clip_horizontal|start"
        android:text="Donnez votre Observation"
        android:textColor="?attr/colorPrimaryDark"
        android:textSize="27sp"
        app:layout_constraintBottom_toTopOf="@+id/obs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.634"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
android:onClick="Envoyer"
        android:layout_alignLeft="@+id/cardView1"
        android:layout_alignStart="@+id/cardView1"
        android:layout_below="@+id/cardView1"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="350dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp">


        <TextView
            android:id="@+id/btninsc"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/cardView"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:gravity="center"
            android:text="Envoyer "
            android:textColor="@color/cardview_light_background"
            android:textSize="18sp"
            android:textStyle="bold|italic" />
    </android.support.v7.widget.CardView>

    <EditText
        android:id="@+id/obs"
        android:layout_width="350dp"
        android:layout_height="165dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="170dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Votre observation"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</RelativeLayout>
